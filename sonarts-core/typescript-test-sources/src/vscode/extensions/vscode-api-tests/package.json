{
	"name": "vscode-api-tests",
	"description": "API tests for VS Code",
	"version": "0.0.1",
	"publisher": "vscode",
	"private": true,
	"engines": {
		"vscode": "*"
	},
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Test Config",
			"properties": {
				"farboo.config0": {
					"type": "boolean",
					"default": true
				},
				"farboo.nested.config1": {
					"type": "number",
					"default": 42
				},
				"farboo.nested.config2": {
					"type": "string",
					"default": "Das Pferd frisst kein Reis."
				},
				"farboo.config4": {
					"type": "string"
				},
				"farboo.get": {
					"type": "string",
					"default": "get-prop"
				}
			}
		},
		"configurationDefaults": {
			"[abcLang]": {
				"editor.lineNumbers": "off",
				"editor.tabSize": 2
			}
		}
	},
	"scripts": {
		"compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
		"vscode:prepublish": "node ../../node_modules/gulp/bin/gulp.js --gulpfile ../../build/gulpfile.extensions.js compile-extension:vscode-api-tests ./tsconfig.json"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.38",
		"@types/node": "^7.0.4",
		"typescript": "^1.6.2",
		"vscode": "1.0.1"
	}
}