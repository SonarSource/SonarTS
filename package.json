{
  "name": "tslint-sonarts",
  "version": "0.1.0",
  "description": "SonarTS rules for TSLint",
  "main": "tslint-sonarts.json",
  "scripts": {
    "prepublish": "tsc -p .",
    "build": "tsc -p .",
    "lint": "tslint -c tslint.json '{src,tests}/**/*.ts'",
    "test": "jest",
    "ruling": "ts-node tests/ruling/index.ts",
    "license-check": "license-check"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SonarSource/SonarTS.git"
  },
  "keywords": [
    "sonarts",
    "sonarqube",
    "typescript",
    "tslint"
  ],
  "license": "LGPL-3.0",
  "bugs": {
    "url": "https://github.com/SonarSource/SonarTS/issues"
  },
  "homepage": "https://github.com/SonarSource/SonarTS",
  "peerDependencies": {
    "tslint": "^5.1.0",
    "typescript": "^2.2"
  },
  "devDependencies": {
    "@types/glob": "^5.0.30",
    "@types/jest": "^19.2.3",
    "@types/lodash": "^4.14.64",
    "@types/minimist": "^1.2.0",
    "@types/node": "^7.0.18",
    "glob": "^7.1.1",
    "jest": "^20.0.1",
    "license-check": "^1.1.5",
    "lodash": "^4.17.4",
    "minimist": "^1.2.0",
    "ts-jest": "^20.0.3",
    "ts-node": "^3.0.4",
    "tslint": "^5.1.0",
    "typescript": "^2.3.2"
  },
  "license-check-config": {
    "src": [
      "src/**/*.ts",
      "tests/rules/**/*.test.ts",
      "tests/ruling/**/*.ts",
      "!./node_modules/**/*"
    ],
    "path": "HEADER",
    "blocking": true,
    "logInfo": false,
    "logError": true
  }
}
