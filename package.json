{
  "name": "tslint-sonarts",
  "version": "0.0.1",
  "description": "SonarTS rules for TSLint",
  "main": "tslint-sonarts.json",
  "scripts": {
    "build": "tsc -p .",
    "lint": "tslint -c tslint.json '{src,tests}/**/*.ts'",
    "test": "jest -t='^((?!ruling).)*$'",
    "ruling": "jest -t ruling",
    "test-all": "jest",
    "license-check": "license-check"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SonarSource/SonarTS.git"
  },
  "keywords": [
    "sonarts",
    "sonarqube",
    "typescript",
    "tslint"
  ],
  "license": "LGPL-3.0",
  "bugs": {
    "url": "https://github.com/SonarSource/SonarTS/issues"
  },
  "homepage": "https://github.com/SonarSource/SonarTS",
  "dependencies": {
    "license-check": "^1.1.5",
    "typescript": "^2.3.2"
  },
  "devDependencies": {
    "@types/glob": "^5.0.30",
    "@types/jest": "^19.2.3",
    "@types/node": "^7.0.18",
    "glob": "^7.1.1",
    "jest": "^20.0.1",
    "ts-jest": "^20.0.3",
    "tslint": "^5.2.0"
  },
  "license-check-config": {
    "src": [
      "src/**/*.ts",
      "tests/**/*.test.ts",
      "!./node_modules/**/*"
    ],
    "path": "HEADER",
    "blocking": false,
    "logInfo": false,
    "logError": true
  }
}
